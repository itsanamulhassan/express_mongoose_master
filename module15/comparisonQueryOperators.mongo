let db;

// ğŸ”¹ $eq â€” Equal To
// Matches documents where the value of the field is equal to the specified value.
db.users.find({ age: { $eq: 25 } });
// Same as:
db.users.find({ age: 25 });

// ğŸ”¹ $ne â€” Not Equal To
// Matches documents where the value of the field is not equal to the specified value.
db.users.find({ age: { $ne: 25 } });

// ğŸ”¹ $gt â€” Greater Than
// Matches values greater than the specified value.
db.users.find({ age: { $gt: 25 } });

// ğŸ”¹ $gte â€” Greater Than or Equal To
// Matches values greater than or equal to the specified value.
db.users.find({ age: { $gte: 18 } });

// ğŸ”¹ $lt â€” Less Than
// Matches values less than the specified value.
db.users.find({ age: { $lt: 30 } });

// ğŸ”¹ $lte â€” Less Than or Equal To
//  Matches values less than or equal to the specified value.
db.users.find({ age: { $lte: 30 } });
// Combine with $gte to get a range:
db.users.find({ age: { $gte: 18, $lte: 30 } });

// ğŸ”¹ $in â€” Matches Any in Array
//  Matches documents where the fieldâ€™s value is in the specified array.
db.users.find({ age: { $in: [18, 20, 25, 30] } });

// ğŸ”¹ $nin â€” Not In Array
// Matches documents where the fieldâ€™s value is not in the specified array.
db.users.find({ age: { $nin: [18, 20, 25, 30] } });

// ğŸ§  COMBINED USE CASE
// âœ… Get Female users aged between 18 and 30:
db.users.find({
  gender: "Female",
  age: { $gte: 18, $lte: 30 },
});
// âœ… Get users with age not 18 and not 25:
db.users.find({
  age: { $nin: [18, 25] },
});
// âœ… Get users whose interests include â€œReadingâ€ or â€œCookingâ€:
db.users.find({
  interests: { $in: ["Reading", "Cooking"] },
});
// âœ… Get users aged over 18 but not interested in â€œGamingâ€:
db.users.find({
  age: { $gt: 18 },
  interests: { $ne: "Gaming" },
});
