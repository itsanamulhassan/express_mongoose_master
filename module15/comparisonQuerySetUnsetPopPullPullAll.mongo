// ğŸ§¹ $unset â€“ Remove a Field
db.test.updateOne(
  { _id: ObjectId("6406ad63fc13ae5a40000065") },
  { $unset: { birthday: "" } }
);
// ğŸ“ Note:
// - Deletes the specified field from the document.

// â– $pop â€“ Remove First or Last Item from Array
// Remove last item
db.test.updateOne(
  { _id: ObjectId("6406ad63fc13ae5a40000065") },
  { $pop: { friends: 1 } }
);

// Remove first item
db.test.updateOne(
  { _id: ObjectId("6406ad63fc13ae5a40000065") },
  { $pop: { friends: -1 } }
);
// ğŸ“ Note:
// - removes last, -1 removes first.

// âŒ $pull â€“ Remove Specific Value from Array
db.test.updateOne(
  { _id: ObjectId("6406ad63fc13ae5a40000065") },
  { $pull: { languages: "German" } }
);
// ğŸ“ Note:
// - Removes all instances of "German" from the array.

// âŒ $pullAll â€“ Remove Multiple Values from Array
db.test.updateOne(
  { _id: ObjectId("6406ad63fc13ae5a40000065") },
  { $pullAll: { languages: ["Catalan", "Thai"] } }
);
// ğŸ“ Note:
// - Removes all listed items if they exist.

